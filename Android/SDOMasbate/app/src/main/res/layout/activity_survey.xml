<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DivisionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="327dp"
            android:layout_height="51dp"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:hint="Name (Optional)"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edit_text_position"
            android:layout_width="327dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:hint="Position (Required)"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/edit_text_purpose"
            android:layout_width="327dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:hint="Purpose (Required)"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_position"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btn_next_1"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_button"
            android:lineSpacingExtra="8dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_purpose"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>